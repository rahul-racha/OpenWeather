<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/design_default_color_background</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textColorPrimary">@color/toolbarTitle</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">30dp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
    </style>

</resources>
